version: '3.8'

services:
  {{sanitizedAppName}}-{{deploymentColor}}:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "{{hostPort}}:{{containerPort}}"
      # - "9000:9000" # Remove or restrict if not needed externally
    environment:
      - NODE_ENV={{environment}}
      - PORT={{containerPort}}
      - HEALTH_PORT=9000
    env_file:
      - {{envFile}}
    restart: unless-stopped
    networks:
      - traefik-network
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.{{sanitizedAppName}}-{{deploymentColor}}.rule=Host(`{{domain}}`)"
      - "traefik.http.services.{{sanitizedAppName}}-{{deploymentColor}}.loadbalancer.server.port={{containerPort}}"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/health"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 40s

networks:
  traefik-network:
    external: true