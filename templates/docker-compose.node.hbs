version: '3.8'

services:
  {{sanitizedAppName}}:
    container_name: {{sanitizedAppName}}
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      - NODE_ENV={{environment}}
      - PORT={{containerPort}}
      - HEALTH_PORT=9000
    env_file:
      - "{{envFile}}"
    restart: unless-stopped
    networks:
      - traefik-network
    labels:
      - "traefik.enable=true"

      # HTTPS Router
      - "traefik.http.routers.{{sanitizedAppName}}-secure.rule=Host(`{{domain}}`)"
      - "traefik.http.routers.{{sanitizedAppName}}-secure.entrypoints=websecure"
      - "traefik.http.routers.{{sanitizedAppName}}-secure.tls.certresolver=myresolver"
      - "traefik.http.services.{{sanitizedAppName}}.loadbalancer.server.port={{containerPort}}"

      # HTTP Router (for Let's Encrypt HTTP challenge)
      - "traefik.http.routers.{{sanitizedAppName}}-insecure.rule=Host(`{{domain}}`)"
      - "traefik.http.routers.{{sanitizedAppName}}-insecure.entrypoints=web"
      - "traefik.http.middlewares.{{sanitizedAppName}}-https-redirect.redirectscheme.scheme=https"
      - "traefik.http.routers.{{sanitizedAppName}}-insecure.middlewares={{sanitizedAppName}}-https-redirect"

    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/health"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 40s

networks:
  traefik-network:
    external: true